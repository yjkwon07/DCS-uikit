{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "@emotion/core"
    ],
  },
  "include": [
    "src",
    "src/typings/*",
  ],
  "exclude": [
    "node_modules",
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/typings/*",
  ]
}